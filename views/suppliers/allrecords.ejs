<% if (allrecs.length > 0) {%>
	<table>
		<% allrecs.forEach((recref, index) => { %>
			<tr>
				<td><%= recref.supplier_id %></td>
				<td><%= recref.supplier_name%></td>
				<td><%= recref.supplier_description %></td>
				<td><a href='/suppliers/<%= recref.supplier_id %>/show'>Details</a></td>
				<td><a href='/suppliers/<%= recref.supplier_id%>/edit'>Edit</a></td>
				<td><a href='/suppliers/<%= recref.supplier_id %>/delete'onclick="return confirm('Are you sure you want to delete this record?')" >Delete</a></td>
			</tr>
		<% }); %>
		</table>
		<a href = '/suppliers/addrecord'>New Record</a>

		<% } else { %>
		<p>No Records Available</p>
		<% } %>
