<h1> Edit Employee</h1>
<form action="/employee/save" method="post">
	<input type="hidden" name="employee_id" value="<%= onerec.employee_id %>">
<table>
	<tr> <td> First Name: </td> <td> <input type="text" name="firstname" value="<%= onerec.firstname %>" required> </td> </tr>
	<tr> <td> Last Name: </td> <td> <input type="text" name="lastname" value="<%= onerec.lastname %>" required> </td> </tr>
	<tr> <td> Email: </td> <td> <input type="text" name="email" value="<%= onerec.email %>" required> </td> </tr>
	<tr> <td> Phone: </td> <td> <input type="text" name="phone" value="<%= onerec.phone %>" required> </td> </tr>
	<tr> <td> Address Line 1: </td> <td> <input type="text" name="address1" value="<%= onerec.address1 %>" required> </td> </tr>
	<tr> <td> Address Line 2: </td> <td> <input type="text" name="address2" value="<%= onerec.address2 %>"> </td> </tr>
	<tr> <td> City: </td> <td> <input type="text" name="city" value="<%= onerec.city %>" required> </td> </tr>
	<tr> <td> State: </td> <td> <input type="text" name="state" value="<%= onerec.state %>" required> </td> </tr>
	<tr> <td> Zip Code: </td> <td> <input type="number" name="zip" value="<%= onerec.zip %>" required> </td> </tr>
	<tr> <td> Wage: </td> <td> <input type="number" name="wage" value="<%= onerec.hourly_wage %>" required> </td> </tr>
	<tr> <td> Hours Worked: </td> <td> <input type="number" name="hours" value="<%= onerec.hours_worked %>" required> </td> </tr>
	<tr> <td> Position: </td> <td> <input type="text" name="position" value="<%= onerec.position %>" required> </td> </tr>

</table>

<button type="submit">Save</button>
</form>